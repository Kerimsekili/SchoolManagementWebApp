@model SchoolManagementWebApp.Models.Der
@{
    ViewBag.Title = "DersEkle";
    Layout = "~/Views/Shared/_OkulLayout.cshtml";
}

<h2>Ders Ekle</h2>
<form class="form-group" method="post">
    <div style="margin-bottom:15px">
        @Html.LabelFor(x => x.Ad)
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        @Html.LabelFor(x => x.Kredi)
        @Html.TextBoxFor(x => x.Kredi, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        @Html.LabelFor(x => x.OkulYonetimId)
        @Html.TextBoxFor(x => x.OkulYonetimId, new { @class = "form-control" })
    </div>
    <button class="btn btn-info">Kaydet</button>
</form>

